---
import { v4 as uuidv4 } from 'uuid';
import { AgoraLogo, AgoraOpenAILogo, OpenAILogo } from '../components/icons';
import Layout from "../layouts/Layout.astro";

let error: string = "";

if (Astro.request.method === "POST") {
  try {
    const channelName = uuidv4();
    return Astro.redirect(`/channel/${channelName}`);
  } catch (error) {
    if (error instanceof Error) {
      error = error.message;
    }
  }
}
---

<Layout title="Agora & OpenAI">
  <div class="pt-8 w-full flex justify-center items-center">
    <div class="mr-16 mt-4 scale-125"><AgoraLogo /></div>
    <div class="scale-125"><OpenAILogo /></div>
  </div>
  <div class="flex flex-col items-center justify-center pt-40 bg-black text-white">
    <AgoraOpenAILogo />
    <h1 class="text-4xl font-bold mt-8 mb-2">Agora & OpenAI</h1>
    <p class=" text-gray-300 mb-16">Agora Conversational AI demo<br />built in partnership with OpenAI</p>
    
    <form method="POST" class="w-full max-w-md pb-16">
      <button
        class="bg-sky-300 hover:bg-sky-400 text-black font-bold py-3 px-6 rounded-md w-full flex items-center justify-center"
        type="submit"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
        </svg>
        Join Call
      </button>
    </form>
  </div>
</Layout>
